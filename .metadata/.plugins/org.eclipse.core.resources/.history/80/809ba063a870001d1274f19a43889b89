package vh.objectManagers;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import vh.enemy.Enemy;
import vh.helper.LoadSave;
import vh.scene.Playing;

public class EnemyManager {
	
	private final int ENEMYTOTAL = 4;
	private Playing playing;
	private BufferedImage[] enemyImages;
	private Enemy testEnemy;
	
	public EnemyManager(Playing plyng) {
		this.playing = plyng;
		this.enemyImages = new BufferedImage[ENEMYTOTAL];
		this.testEnemy = new Enemy(32*3, 32*9, 0, 0);
		loadEnemyImages();
	}
	
	private void loadEnemyImages() {
		BufferedImage enemyAtlas = LoadSave.getSpriteAtlas();
		enemyImages[0] = enemyAtlas.getSubimage(0, 0, 48, 48);
		enemyImages[1] = enemyAtlas.getSubimage(48, 48, 48, 48);
		enemyImages[2] = enemyAtlas.getSubimage(48*2, 48, 48, 48);
		enemyImages[3] = enemyAtlas.getSubimage(48*3, 48, 48, 48);
		
	}

	public void update() {
		
	}
	
	public void draw(Graphics g) {
		drawEnemy(testEnemy, g);
	}

	private void drawEnemy(Enemy en, Graphics g) {
		g.drawImage(enemyImages[1], (int)en.getX(), (int)en.getY(), null);
		
	}
}
