package vh.main;

import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.IOException;
import java.io.InputStream;
import java.util.ArrayList;
import java.util.Random;

import javax.imageio.ImageIO;

public class GameRenders {

	private GameScreen gameScreen;
	private Random rand;
	private BufferedImage map;
	private BufferedImage sprite;
	private BufferedImage mapIMG;
	private BufferedImage spriteIMG;
	
	private ArrayList<BufferedImage> sprites = new ArrayList<>();
	
	public GameRenders(GameScreen gs) {
		this.gameScreen = gs;
		this.rand = new Random();
		importImg();
		this.map = mapIMG;
		this.sprite = spriteIMG;
	}
	
	public void render(Graphics g) {
		switch(GameStates.gameState) {
		
			case MENU :
				for (int i = 0 ; i < 16 ; i++) {
					for (int j = 0 ; j < 9; j++){
						g.drawImage(sprites.get(getRX()), i*40, j*40, null);
					}
				}
				break;
				
			case SETTINGS :
				break;
				
			case PLAYING :
				break;
		
		}
	}
	
	private void importImg() {
		InputStream is = getClass().getResourceAsStream("/croppedmap.jpeg");
		try {
			this.mapIMG = ImageIO.read(is);
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		is = getClass().getResourceAsStream("/marioatlas.png");
		try {
			this.spriteIMG = ImageIO.read(is);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	private void loadSprites() {
		for (int i = 0 ; i < 14 ; i++)
		{
			for (int j = 0 ; j < 5 ; j++)
			{
				sprites.add(sprite.getSubimage(i*17, j*29, 17, 29));
			}
		}
	}
	
	private int getRX() {
		return rand.nextInt(14);
	}
	
	private int getRY() {
		return rand.nextInt(5);
	}
}
